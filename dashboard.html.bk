.container {
  display: grid;
  margin-top: 50px;
  justify-content: space-evenly;
  height:50%;
  grid-template-columns: 60% 1% 35%;
  grid-template-rows: 40px 50px 50px 50px 50px 50px 50px;
}

.block1 {
  grid-row: 1 / 3;
  grid-column: 1 / 1;
}

.block2 {
  grid-row: 2 / 2;
  grid-column: 3 / 3;
}

.block3 {
  grid-row: 3 / 3;
  grid-column: 3 / 3;
}

.block4 {
  grid-row: 4 / 4;
  grid-column: 3 / 3;
}

.block5 {
 grid-row: 5 / 5;
  grid-column: 3 / 3;
}

.block6 {
 grid-row: 6 / 6;
  grid-column: 3 / 3;
}

input {
  color: rgb(184,223,221);
    background-color: transparent;
