    {% csrf_token %}
    <input autofocus id="id_username" maxlength="150" name="username" required type="text" placeholder="username">
    <input type="password" name="password1" required id="id_password1" placeholder="password">
    <input type="password" name="password2" required id="id_password2" placeholder="confirm password">
    <button type="submit" class="button">SIGN UP</button>
{% if error == "TRUE" %}
<h1 class="redText" style="font-size:10px;margin-top:20px; width:250px">ERROR: INVALID USERNAME OR PASSWORD</h1>
{% endif %}
</form>    
</div>
<div style="margin-left: 40px; text-align: center">
<h1 class="redText" style="top: 0px; font-size:30px;margin-top:75px;margin-bottom:20px;text-align:left">unlock the power of big data with</h1>
<h1 class="tealText" style="top: 0px;margin-top:1px;color:white;text-align: left">THE <span style="color:rgb(85,179,175)">NEXT GENERATION</span> OF INVESTMENT ANALYSIS TOOLS</h1>
</div>
</div>
